{
  "manifest_version": 3,
  "name": "Link Cleaner",
  "version": "1.0",
  "description": "Cleans up Outlook-encapsulated links.",
  "permissions": ["clipboardRead", "clipboardWrite"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
